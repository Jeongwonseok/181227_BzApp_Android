                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/o" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="vertical">

